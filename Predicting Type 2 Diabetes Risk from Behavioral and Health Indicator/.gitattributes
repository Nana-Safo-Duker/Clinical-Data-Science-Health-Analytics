# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf

# R
*.R text eol=lf
*.Rmd text eol=lf
*.Rproj text eol=lf

# Jupyter Notebooks
*.ipynb text eol=lf

# Data files
*.csv text eol=lf
*.tsv text eol=lf
*.txt text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

